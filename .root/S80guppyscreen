#!/bin/sh
#
# Start guppyscreen
#

GUPPYSCREEN=/root/guppyscreen/guppyscreen
PID_FILE=/run/guppyscreen.pid
NICENESS=10


start() {
	echo "Starting guppyscreen..."
	start-stop-daemon -S -b -m -p $PID_FILE -N $NICENESS --exec /bin/sh -- -c $GUPPYSCREEN
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}

stop() {
	echo "Stopping guppyscreen..."
	
	if [ -f $PID_FILE ]; then
		start-stop-daemon -K -q -p $PID_FILE
		[ $? = 0 ] && echo "OK" || echo "FAIL"

		rm -f $PID_FILE
	else
		echo "Not running"
	fi	
}

restart() {
	stop
	start
}

case "$1" in
  start)
  	start
	;;
  stop)
  	stop
	;;
  restart|reload)
  	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?
